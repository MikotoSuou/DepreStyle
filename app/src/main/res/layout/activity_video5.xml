<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bj_pogi.deprestylefinalfinal.Video5Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/customToolbar"
            layout="@layout/custom_toolbar" />


        <com.google.android.youtube.player.YouTubePlayerView
            android:id="@+id/video_player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/cara_delevingne_s_powerful_life_advice_on_overcoming_depression_and_anxiety"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:padding="5dp"
            android:layout_margin="15dp"/>


        <Button
            android:id="@+id/btnPlayVid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/play_video"
            android:padding="15dp"
            android:background="@drawable/buttonstylestartvideo"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="40dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/source_testimonies5"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:padding="5dp"
            android:layout_margin="15dp"/>



    </LinearLayout>

</ScrollView>